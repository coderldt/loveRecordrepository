.u-tabbar .u-tabbar__content__item__button {
  top: 18rpx;
}
#login {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 50rpx;
  width: 100vw;
  height: 100vh;
}
#login .content {
  flex: 1;
  width: 90%;
  margin: 0 auto;
}
#login .content ._h2 {
  font-size: 42rpx;
  font-weight: 600;
  padding: 5vh 0 4vh;
}
#login .content .u-input {
  margin-bottom: .5em;
  border-bottom: 1px solid #ebebeb;
}
#login .content .u-btn {
  margin: 1em 0;
}
#login .content .quickLogin {
  margin-top: .2em;
  float: right;
}
#login .notice {
  position: relative;
  font-size: 24rpx;
  line-height: 24rpx;
}
#login .notice .u-checkbox {
  margin-bottom: 12rpx;
}
#login .notice .u-checkbox__label {
  margin-left: 0;
}
#login .notice.isFouce {
  -webkit-animation: 1s linear 0s infinite  move;
          animation: 1s linear 0s infinite  move;
}
@-webkit-keyframes move {
0% {
    left: 0px;
}
20% {
    left: -3px;
}
40% {
    left: 0px;
}
60% {
    left: 3px;
}
80% {
    left: -3px;
}
100% {
    left: 0px;
}
}
@keyframes move {
0% {
    left: 0px;
}
20% {
    left: -3px;
}
40% {
    left: 0px;
}
60% {
    left: 3px;
}
80% {
    left: -3px;
}
100% {
    left: 0px;
}
}

